<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="560dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/shape_select_dialog"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="定期随访，发育评估，健康指导"
        android:textColor="@color/black6"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <EditText
            android:id="@+id/et_health_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_health_guide_dialog"
            android:gravity="top|left"
            android:hint="@string/please_enter_advise"
            android:maxLength="255"
            android:padding="@dimen/dp_8"
            android:textColor="@color/black6"
            android:textColorHint="@color/black9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_text_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_health_guide"
            android:layout_alignEnd="@+id/et_health_guide"
            android:layout_margin="8dp"
            android:text="0/255"
            android:textColor="@color/black9" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据测量: "
            android:textColor="@color/black9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_measure_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血压999/999mmHg"
            android:textColor="#fe7474"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp15"
        android:background="@drawable/flat_button_style" />

</LinearLayout>