<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_6">

        <TextView
            android:id="@+id/tvResidentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black3"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvResidentSex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvResidentAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvResidentIdCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvResidentPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvResidentCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_service_button_bg"
            android:clickable="true"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/add"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp18" />
    </LinearLayout>

</android.support.v7.widget.CardView>