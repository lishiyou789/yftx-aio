<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_home_title_gradient_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:src="@drawable/ic_chevron_left_black_36dp" />

    <TextView
        android:id="@+id/tvLeftTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_8"
        android:text="我的居民"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_weight="1"
        android:background="@drawable/shape_search_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@mipmap/search_icon_gray"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:hint="输入姓名 / 身份证号 / 手机号 / 居民码"
            android:imeActionLabel="@string/search"
            android:imeOptions="actionSearch"
            android:textColor="@color/black6"
            android:textColorHint="@color/ccc"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/ed_clear_icon"
            android:visibility="invisible" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/selector_home_add_resident_bg"
        android:clickable="true"
        android:drawableLeft="@mipmap/search_icon_white1"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tvNewResident"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/selector_home_add_resident_bg"
        android:clickable="true"
        android:drawableLeft="@mipmap/ic_home_add_resident_icon"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:text="@string/add_resident"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tvFilter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/selector_home_add_resident_bg"
        android:clickable="true"
        android:drawableLeft="@mipmap/search_filter_icon"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:text="@string/filter"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
</LinearLayout>