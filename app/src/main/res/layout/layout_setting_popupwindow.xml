<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_1"
    android:background="@drawable/shape_family_doctor_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_1">

    <LinearLayout
        android:id="@+id/llCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/selector_item_click_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/setting_qrcode_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:text="我的二维码"
            android:textColor="@color/black6"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>

    <include layout="@layout/layout_divider_line_gray" />

    <LinearLayout
        android:id="@+id/llSettingLayout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/selector_item_click_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/setting_system_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:text="更多设置"
            android:textColor="@color/black6"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>

    <include layout="@layout/layout_divider_line_gray" />

    <LinearLayout
        android:id="@+id/llLoginOutLayout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/selector_item_click_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/setting_logout_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:text="注销登录"
            android:textColor="@color/black6"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>
</LinearLayout>