<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_10"
    android:paddingStart="@dimen/dp_10">

    <include
        layout="@layout/layout_resident_health_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_resident_finish"
            android:textSize="@dimen/sp15"
            android:textColor="@color/white"
            android:background="@drawable/flat_button_style"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/new_resident_arrow"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_back_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="@string/add_resident_pre"
                android:textColor="@color/blackC"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>